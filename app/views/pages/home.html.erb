<%= render partial: "layouts/flash", locals: {desired_message: "Chatroom created!"} %>

<h1>Home page</h1>

<h2><%= link_to "Turbo tutorial", "https://www.hotrails.dev/turbo-rails/turbo-frames-and-turbo-streams" %></h2>

<%= simple_form_for Chatroom.new, url: chatrooms_path do |f| %>
  <h4><%= f.input :name %></h4>
  <%= f.button :submit %>
<% end %>

<%= render partial: "layouts/flash", locals: {desired_message: "Chatroom names can't be blank."} %>

<br/>

<% @chatrooms.each do |chatroom| %>
  <h3><%= link_to chatroom.name, chatroom_path(chatroom) %></h3>
<% end %>
