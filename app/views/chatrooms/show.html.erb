<%= turbo_stream_from "chatroom_channel_#{@chatroom.id}" %>

<h1><%= @chatroom.name %></h1>

<h2>Add a comment</h2>
<%= simple_form_for @comment, url: chatroom_comments_path(@chatroom) do |f| %>
  <h4><%= f.input :content %></h4>
  <%= f.button :submit %>
<% end %>

<%= render partial: "layouts/flash", locals: {desired_message: "Comments can't be blank."} %>

<%= render partial: "comments", locals: {comments: @comments} %>
